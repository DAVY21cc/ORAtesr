@page
@model ORABANK.Pages.Penalite.RechercheModel
@{
}

<head>
    <script type="text/javascript" src="~/js/site.js"></script>
    <script type="text/javascript" src="~/js/jquery.js"></script>
</head>
<br />

<h2>Recherche de Pénalité </h2>

<div class="row mb-3">
        <label class="col-sm-3 col-form-label">Rechercher</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="recherche" value=""/>
        </div>
 </div>

<head>
    <link rel="stylesheet" media="all" href="../mystyle.css" />
    <style>
        body{
            background-image : linear-gradient(green,white);
        }

    </style>
</head>

<body>

<br >

<table class="table">

    <tdiv>
        <tr>

            <th>ID</th>
            <th>Filiale</th>
            <th>Date</th>
            <th>Montant total</th>
            <th>Montant cfa</th>
            <th>Montant monnaie local</th>
            <th>Payement</th>
            <th>Motif</th>
            <th>Loi</th>
            <th>Observation</th>
            <th>Devise</th>           
        </tr>

    </tdiv>

    <tdiv>
        @foreach(var sdi in Model.listPenalite)
        {
            <tr>
                <td>@sdi.id_penalite</td>
                <td>@sdi.filiale</td>
                <td>@sdi.date_penalite</td>
                <td>@sdi.montant_total</td>
                <td>@sdi.montant_cfa</td>
                <td>@sdi.montant_monnaie_local</td>
                <td>@sdi.payement</td>
                <td>@sdi.motif</td>
                <td>@sdi.loi</td>
                <td>@sdi.observation</td>
                <td>@sdi.devise</td>           
           </tr>         
        }
    </tdiv>

</table>
</body>